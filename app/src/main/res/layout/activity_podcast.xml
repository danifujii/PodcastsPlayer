<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_podcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.podcastplayer.PodcastActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/darkGray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pod_artwork"
            android:layout_width="@dimen/big_image_size"
            android:layout_height="@dimen/big_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/pod_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/pod_artist_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGray"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/activity_small_margin"
                android:paddingBottom="@dimen/activity_small_margin"/>

            <Button
                android:id="@+id/subscribe_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscribe_button" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/latest_ep_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latest_ep"
        android:textStyle="bold"
        android:textColor="@color/darkGray"
        android:textSize="17sp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_medium_margin"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/episodes_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_desc"
        android:textStyle="bold"
        android:textColor="@color/darkGray"
        android:textSize="17sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/pod_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/mediumGray"
        android:paddingTop="@dimen/activity_medium_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

</LinearLayout>
