<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_podcast2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.daniel.podcastplayer.PodcastActivity">

        <include layout="@layout/podcast_header"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/episodes_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/splayer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include layout="@layout/player_sheet"/>

    </FrameLayout>

</RelativeLayout>